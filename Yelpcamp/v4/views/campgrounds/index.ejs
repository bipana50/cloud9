<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h2>Here are the campgrounds</h2>
        <p>View all campgrounds.</p>
        <p><a class="btn btn-primary btn-large" href="/campgrounds/new">add a new campground</a></p>
        </div>
</header>
<div class="row" style="display:flex; flex-wrap:wrap;">
<% campground.forEach(function(campgrounds){ %>
<div class="col-md-3 col-sm-6">
    <div class="thumbnail">
    <img src="<%= campgrounds.image %>">
    <div class="caption">
           <h4> <%= campgrounds.name %> </h4>
           <p>
               <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More info</a>
           </p>
    </div>
    </div>
</div>
<% }); %>
</div>
</div>
<% include ../partials/footer.ejs %>
